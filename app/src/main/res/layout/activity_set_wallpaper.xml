<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetWallpaper">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pexelsnature"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:id="@+id/finalImage"/>


    <soup.neumorphism.NeumorphButton
        style="@style/Widget.Neumorph.Button"
        android:textStyle="bold"
        android:textSize="18dp"
        android:id="@+id/setWallpaper"
        android:textColor="@color/main"
        android:layout_centerInParent="true"
        android:padding="30dp"
        app:neumorph_backgroundColor="@color/white"
        app:neumorph_strokeColor="@color/main"
        android:shadowColor="@color/main"
        app:neumorph_shadowColorDark="#CDCECF"
        app:neumorph_shadowColorLight="#CDCECF"
        android:fontFamily="@font/imprima"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Wallpaper"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>

</RelativeLayout>